<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: #57D1C9;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xoclientgame.SingleViewController">
   <children>
      <ImageView fitHeight="550.0" fitWidth="751.0" pickOnBounds="true">
         <image>
            <Image url="@../Images/page.png" />
         </image>
      </ImageView>
      <TextField fx:id="txt_name" layoutX="211.0" layoutY="44.0" opacity="0.76" prefHeight="41.0" prefWidth="301.0" style="-fx-background-radius: 50;">
         <font>
            <Font name="Bookman Old Style Bold" size="20.0" />
         </font></TextField>
      <RadioButton fx:id="X" layoutX="555.0" layoutY="46.0" mnemonicParsing="false" prefWidth="57.0" text="X">
         <font>
            <Font name="Jokerman" size="22.0" />
         </font></RadioButton>
      <RadioButton fx:id="O" layoutX="645.0" layoutY="45.0" mnemonicParsing="false" text="O">
         <font>
            <Font name="Jokerman" size="22.0" />
         </font></RadioButton>
      <Label layoutX="94.0" layoutY="42.0" text="Name" textFill="#a81010fa">
         <font>
            <Font name="Bell MT Bold" size="36.0" />
         </font></Label>
      <Button fx:id="btn_play" layoutX="276.0" layoutY="429.0" mnemonicParsing="false" onAction="#play" prefHeight="57.0" prefWidth="224.0" style="-fx-background-radius: 100; -fx-background-color: #38c450;" text="play" textFill="WHITE">
         <font>
            <Font name="Sitka Display Bold Italic" size="31.0" />
         </font></Button>
      <Button layoutX="44.0" layoutY="486.0" mnemonicParsing="false" onAction="#back" prefHeight="35.0" prefWidth="92.0" style="-fx-background-radius: 100; -fx-background-color: #93704a;" text="Back" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style" size="18.0" />
         </font></Button>
      <ToggleButton fx:id="btn_easy" graphicTextGap="0.0" layoutX="237.0" layoutY="264.0" mnemonicParsing="false" onAction="#easy" opacity="0.9" prefHeight="102.0" prefWidth="101.0" style="-fx-background-radius: 100; -fx-background-color: #00FF00;" text="Easy">
         <font>
            <Font name="Jokerman" size="19.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="groupLevels" />
         </toggleGroup>
         <opaqueInsets>
            <Insets bottom="15.0" left="10.0" right="1.0" top="12.0" />
         </opaqueInsets>
      </ToggleButton>
      <ToggleButton fx:id="btn_meduim" graphicTextGap="12.0" layoutX="337.0" layoutY="185.0" mnemonicParsing="false" onAction="#meduim" opacity="0.9" prefHeight="102.0" prefWidth="101.0" style="-fx-background-radius: 100; -fx-background-color: #FFE869;" text="Meduim" toggleGroup="$groupLevels">
         <font>
            <Font name="Jokerman" size="19.0" />
         </font>
      </ToggleButton>
      <ToggleButton fx:id="btn_hard" graphicTextGap="10.0" layoutX="450.0" layoutY="264.0" mnemonicParsing="false" onAction="#hard" opacity="0.9" prefHeight="102.0" prefWidth="101.0" style="-fx-background-radius: 100; -fx-background-color: #57D1C9;" text="Hard" toggleGroup="$groupLevels">
         <font>
            <Font name="Jokerman" size="19.0" />
         </font>
      </ToggleButton>
      <CheckBox fx:id="btn_record" layoutX="626.0" layoutY="484.0" mnemonicParsing="false" onAction="#record" prefHeight="35.0" prefWidth="92.0" style="-fx-background-radius: 100; -fx-background-color: #93704a;" text="Record" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style Bold" size="15.0" />
         </font>
      </CheckBox>
   </children>
</AnchorPane>
