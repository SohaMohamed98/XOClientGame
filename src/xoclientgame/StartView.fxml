<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xoclientgame.StartViewController">
   <children>
      <ImageView blendMode="DARKEN" fitHeight="550.0" fitWidth="750.0" pickOnBounds="true">
         <image>
            <Image url="@../Images/game.png" />
         </image>
      </ImageView>
      <Button fx:id="btn_singlePlayer" layoutX="232.0" layoutY="317.0" mnemonicParsing="false" onAction="#singlePlayer" prefHeight="30.0" prefWidth="286.0" style="-fx-background-color: #ED5485; -fx-background-radius: 100;" text="Single Player" textFill="#eeeeee">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <Button fx:id="btn_localMultiplayer" layoutX="232.0" layoutY="359.0" mnemonicParsing="false" onAction="#localPlayer" prefHeight="30.0" prefWidth="286.0" style="-fx-background-color: #08D9D6; -fx-background-radius: 100;" text="Local Multiplayer" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <Button fx:id="btn_onlineMultiplayer" layoutX="232.0" layoutY="404.0" mnemonicParsing="false" onAction="#online" prefHeight="30.0" prefWidth="286.0" style="-fx-background-color: #f9ce00; -fx-background-radius: 100;" text="Online Multiplayer" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
      <Button fx:id="btn_record" layoutX="644.0" layoutY="23.0" mnemonicParsing="false" onAction="#record" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: #ea0e0e; -fx-background-radius: 100;" text="Record" textFill="WHITE">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="btn_localHistory" layoutX="32.0" layoutY="482.0" mnemonicParsing="false" onAction="#playerHistory" prefHeight="31.0" prefWidth="118.0" style="-fx-background-radius: 50; -fx-background-color: #ea0e0e;" text="Local History" textFill="WHITE">

         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <ImageView fitHeight="223.0" fitWidth="234.0" layoutX="264.0" layoutY="53.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
